<div class="row">
  <% @seller.products.each do |product| %>
  <div class="col-md-4">
    <div class="ui card">
      <div class="image">
        <%= image_tag product.image %>
      </div>
      <div class="content">
        <a class="header"><%= link_to product.name, product_path(id: product.id) %></a>
        <div class="meta">
          <span class="date"><%= product.price %></span>
        </div>
        <div class="description">
          <%= product.description %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<br>
